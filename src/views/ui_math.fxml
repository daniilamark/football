<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MathController">
   <center>
      <AnchorPane minHeight="400.0" minWidth="600.0" styleClass="container" stylesheets="@../values/style.css">
         <children>
            <VBox layoutX="20.0" layoutY="20.0" prefHeight="120.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="tfTeam1" focusTraversable="false" promptText="Команда №1" stylesheets="@../values/style.css">
                     <styleClass>
                        <String fx:value="search-box" />
                        <String fx:value="shadow" />
                     </styleClass>
                  </TextField>
                  <TextField fx:id="tfTeam2" focusTraversable="false" promptText="Команда №2" stylesheets="@../values/style.css">
                     <styleClass>
                        <String fx:value="search-box" />
                        <String fx:value="shadow" />
                     </styleClass>
                  </TextField>
                  <DatePicker fx:id="dpDate" focusTraversable="false" prefHeight="25.0" prefWidth="206.0" promptText="Дата игры" stylesheets="@../values/style.css" />
                  <TextField fx:id="tfScore" focusTraversable="false" promptText="Счёт" stylesheets="@../values/style.css">
                     <styleClass>
                        <String fx:value="search-box" />
                        <String fx:value="shadow" />
                     </styleClass>
                  </TextField>
               </children>
            </VBox>
            <TableView fx:id="tvMath" layoutX="370.0" layoutY="20.0" onMouseClicked="#clickItem" prefHeight="300.0" prefWidth="380.0" stylesheets="@../values/style.css">
               <columns>
                  <TableColumn fx:id="colTeam1" prefWidth="93.0" text="Команда №1" />
                  <TableColumn fx:id="colTeam2" prefWidth="109.0" text="Команда №2" />
                  <TableColumn fx:id="colDate" text="Дата" />
                  <TableColumn fx:id="colScore" prefWidth="71.0" text="Счёт" />
               </columns>
            </TableView>
            <VBox layoutX="240.0" layoutY="20.0" prefHeight="65.0" prefWidth="80.0" spacing="10.0">
               <children>
                  <Button fx:id="btnSelectTeam1" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="25.0" prefWidth="80.0" stylesheets="@../values/style.css" text="выбрать">
                     <styleClass>
                        <String fx:value="shadow" />
                        <String fx:value="search-box" />
                     </styleClass>
                  </Button>
                  <Button fx:id="btnSelectTeam2" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="25.0" prefWidth="80.0" stylesheets="@../values/style.css" text="выбрать">
                     <styleClass>
                        <String fx:value="shadow" />
                        <String fx:value="search-box" />
                     </styleClass>
                  </Button>
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </AnchorPane>
   </center>
</BorderPane>
